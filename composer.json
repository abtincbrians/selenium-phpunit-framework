{
    "name": "atlanticbt/selenium-phpunit-framework",
    "description": "This is a Selenium + PHPUnit Framework and test skeleton",
    "authors": [
        {
            "name": "Brian Shirey",
            "email": "brian.shirey@atlanticbt.com"
        }
    ],
    "type": "library",
    "minimum-stability": "dev",
    "repositories": [
        { "type":"composer", "url":"http://satis.atlanticbt.com" }
    ],
    "require": {
        "php": ">=5.4.0",
        "phpunit/phpunit": "*",
        "facebook/webdriver": "dev-master",
        "phpunit/phpunit-selenium": ">=1.2",
        "zendframework/zend-config": "2.3.*@dev",
        "symfony/class-loader": "3.0.*@dev",
        "atlanticbt/selenium-server-standalone" : "2.46.0",
        "bshirey/hierarchical-config" : "1.0.2"

    },
    "autoload": {
        "psr-4": {
            "SeleniumPhp\\": "src/",
            "SeleniumPhp\\Config\\": "src/config/"
        }
    },
    "bin": [
        "bin/test.runner.sh",
        "bin/chromedriver"
    ]
}
