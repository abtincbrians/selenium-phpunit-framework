<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="Bootstrap.php">
    <php>
        <!-- You can configure the test configuration path -->
        <!-- <const name="SELENIUM_CONFIG_PATH" value="tests/config/"/> -->

        <!-- Sets browser to use for tests -->
